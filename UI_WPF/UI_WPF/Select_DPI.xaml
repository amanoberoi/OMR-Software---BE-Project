<Window x:Class="UI_WPF.Select_DPI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select_DPI" Height="350.175" Width="426.481">
    <Grid>
        <Label Content="Please Check with your scanner and select the appropirate DPI. &#xD;&#xA;If you are not sure what to select, please select 300." HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="59" Width="398" FontSize="14"/>
        <RadioButton x:Name="_200_dpi" Content="200 DPI" HorizontalAlignment="Left" Margin="107,151,0,0" VerticalAlignment="Top" FontSize="14" Checked="_200_dpi_Checked"/>
        <RadioButton x:Name="_300_dpi" Content="300 DPI" HorizontalAlignment="Left" Margin="107,181,0,0" VerticalAlignment="Top" FontSize="14" Checked="_300_dpi_Checked"/>
        <Button x:Name="btn_ok" Content="OK" HorizontalAlignment="Left" Margin="147,257,0,0" VerticalAlignment="Top" Width="100" Height="31" Click="btn_ok_Click"/>
        <Label x:Name="warning_label" Content="* Please select a DPI value before pressing OK." HorizontalAlignment="Left" Margin="44,216,0,0" VerticalAlignment="Top" Width="273" FontWeight="Bold" Foreground="#FFF91313"/>

    </Grid>
</Window>
