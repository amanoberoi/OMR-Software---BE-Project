        Title="Enter Answer Key" Height="351.22" Width="354.355" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Enter Answer &#xD;&#xA;(a or b or c or d) :" HorizontalAlignment="Left" Margin="75,93,0,0" VerticalAlignment="Top" FontSize="14" Height="51"/>
        <TextBox Name="txt_answer" HorizontalAlignment="Left" Height="28" Margin="203,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" KeyDown="txt_answer_KeyDown"/>
        <Button Content="OK" Name="btn_ok" HorizontalAlignment="Left" Margin="131,179,0,0" VerticalAlignment="Top" Width="89" Height="36" Click="Button_Click"/>
        <Label Content="*Enter Answer." Name="lbl_enter_answer" Foreground="Red" HorizontalAlignment="Left" Margin="167,137,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
